<project name="djs" default="compile.djs">
	<dirname property="djs.basedir" file="${ant.file}" />
	<property file="${djs.basedir}/_extras/build.properties" />

	<target name="compile.djs" description="Compile module ${ant.project.name}">
		<exec executable="python">
			<arg file="${jsBuilder.filePathName}" />
			<arg value="--filetype=${jsBuilder.fileTypes}" />
			<arg value="--include=${djs.basedir}/" />
			<arg value="--output_path=${jsBuilder.target}" />
			<arg value="--strip_prefix=${djs.basedir}/" />
			<arg value="--exclude_dirs=_extras" />
			<arg value="--exclude_files=makefile.py" />
		</exec>
	</target>

	<target name="cleanup.djs.target" description="Clean target directory of ${ant.project.name}">
		<delete includeEmptyDirs="true"><fileset dir="${jsBuilder.target}" /></delete>
	</target>
</project>